{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "watch": true,
        "outDir": "./public/compiledJs",
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./**/*"
    ]
}